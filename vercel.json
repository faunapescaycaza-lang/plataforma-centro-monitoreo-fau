{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "main.py"
        },
        // Sirve los archivos est√°ticos desde la carpeta 'frontend'
        {
            "src": "/frontend/(.*)",
            "dest": "/frontend/$1"
        },
        // Cualquier otra ruta va a tu SPA principal (index.html) dentro de 'frontend'
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ]
}
