{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "frontend/dist" }
        }
    ],
    "rewrites": [
        { "source": "/api/(.*)", "destination": "/main.py" }
    ]
}
